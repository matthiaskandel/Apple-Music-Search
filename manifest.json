{
  "manifest_version": 3,
  "name": "Search in Apple Music",
  "version": "1.0.0",
  "description": "Search selected text in the Apple Music desktop app",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "browser_specific_settings": {
    "safari": {
      "strict_min_version": "14.0"
    }
  }
}
